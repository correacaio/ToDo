@model IEnumerable<ToDo.Domain.Entities.Item>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create">Adicionar tarefa</a>
</p>

<table id="item" class="table">
    <thead>
        <tr class="">
            <th>Descrição</th>
            <th>Data de criação</th>
            <th>Concluido</th>
            <th>Operacoes</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Description</td>
                <td>@item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                <td>
                    <input type="checkbox" disabled @( item.Done ? "checked" : "" ) />
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id">Apagar</a>
                    <a asp-action="MarkAsDone" asp-route-id="@item.Id" hidden="@(item.Done)">Concluir</a>
                    <a asp-action="MarkAsUndone" asp-route-id="@item.Id" hidden="@(!item.Done)">Desconcluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    function add() {
        window.location.href = ''
    }
</script>